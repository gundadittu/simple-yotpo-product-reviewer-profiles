<!DOCTYPE html>
<style type="text/css">
    .modal {
        opacity: 1 !important;
        z-index: 21 !important;
    }

    .blocker {
        z-index: 20 !important;
    }

    img {
        max-width: 100%;
        display: block;
        height: auto;
    }

    .no-spacing {
        margin: 0;
        padding: 0;
        margin-block-start: 0;
        margin-block-end: 0;
        margin-inline-start: 0;
        margin-inline-end: 0;
    }

    .tiny-top-margin {
        margin: 5px 0 0 0;
        padding: 0;
        margin-block-start: 0;
        margin-block-end: 0;
    }

    .top-margin {
        margin: 15px 0 0 0;
    }

    .smaller-text {
        font-size: 0.85rem;
    }

    .profile-block {
        max-width: 100%;
    }

    .profile-bio-block {
        display: block;
        margin: 3%;
    }

    .profile-bio-image-wrap img {
        border-radius: 50px;
        height: 100%;
        margin-left: auto;
        margin-right: auto;
    }

    .profile-bio-title {
        font-size: 1.25rem;
        text-align: center;
    }

    .profile-stats-block {
        min-height: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: solid 2px #eef2f5;
        border-radius: 20px;
        margin: 0 1% 3% 1%;
        padding: 1%;
    }

    .profile-stats-item {
        width: 33%;
        height: 100%;
        display: block;
        text-align: center;
    }

    .checked {
        color: orange;
    }

    .gray-text {
        color: #787878;
    }

    .review-list {
        list-style-type: none;
        overflow-y: auto;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
    }

    .review-list ol {
        list-style: none;
        padding-inline-start: 0px;
        margin-block-start: 0em;
        margin-block-end: 0em;
        margin-inline-start: 0px;
        margin-inline-end: 0px;
        width: 90%;
    }

    .review-list li:last-child {
        border-bottom: 0;
    }

    .review-list li {
        position: relative;
        display: inline-block;
        width: 100%;
        padding: 1%;
        border-bottom: solid 2px #C0C0C0;
    }

    .review-block {
        position: relative;
        padding: 0;
        margin: 5% 0 5% 0;
    }

    .review-product-block {
        margin: 2% 0 2% 0;
        max-height: 70px;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: left;
        border: solid 2px #eef2f5;
    }

    .review-product-block h2 {
        margin-block-start: 1%;
        margin-block-end: 1%;
    }

    .review-product-image-wrap img {
        width: 50px;
        margin: 10px;
    }

    .review-product-title-wrap {
        text-align: left;
        display: inline-block;
        vertical-align: middle;
    }

    .review-content-block {
        font-size: 16px;
        position: relative;
        display: block;
        width: 100%;
    }
</style>
<div class="profile-block">
    <div class="profile-bio-block">
        <span class="profile-bio-image-wrap">
            <img src=<%=authorImageUrl %>></img>
        </span>
        <span class="profile-bio-title">
            <h2 class="no-spacing">
                <%= authorName %>
            </h2>
        </span>
    </div>
    <div class="profile-stats-block">
        <div class="profile-stats-item">
            <h2 class="no-spacing">
                <%= totalReviewCount %>
            </h2>
            <p class="no-spacing">reviews</p>
        </div>
        <div class="profile-stats-item">
            <h2 class="no-spacing">
                <%= totalUpvoteCount %>
            </h2>
            <p class="no-spacing">upvotes</p>
        </div>
        <div class="profile-stats-item">
            <h2 class="no-spacing">
                <%= avgStarRating %>
            </h2>
            <p class="no-spacing">avg rating</p>
        </div>
    </div>
    <div class="review-list">
        <ol>
            <% allPostedReviews.forEach(function(review){ %>
                <%- include('reviewCard', review); %>
                    <% }); %>
        </ol>
    </div>
</div>